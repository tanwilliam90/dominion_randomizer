<%= form_for(kingdom_card) do |f| %>
  <% if kingdom_card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(kingdom_card.errors.count, "error") %> prohibited this kingdom_card from being saved:</h2>

      <ul>
      <% kingdom_card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :set %>
    <%= f.select :set, [['Base', 'Base'], ['Seaside','Seaside'], ['Prosperity', 'Prosperity'], ['Cornucopia', 'Cornucopia'], ['Empires', 'Empires']] %>
  </div>

  <div class="field">
    <%= f.label :card_type %>
    <%= f.select :card_type, [['Action', 'Action'], ['Treasure', 'Treasure'], ['Victory', 'Victory']] %>
  </div>

  <div class="field">
    <%=f.check_box :sub_type, {:multiple => true}, "Attack", nil%> Attack
    <%=f.check_box :sub_type, {:multiple => true}, "Reaction", nil%> Reaction
    <%=f.check_box :sub_type, {:multiple => true}, "Duration", nil%> Duration
    <%=f.check_box :sub_type, {:multiple => true}, "Victory", nil%> Victory
    <%=f.check_box :sub_type, {:multiple => true}, "Castle", nil%> Castle
  </div>

  <div class="field">
    <%= f.label :cost %>
    <%= f.number_field :cost %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
